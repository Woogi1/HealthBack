<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6eefa"
    >
    <Button
        android:visibility="gone"
        android:id="@+id/btnLineChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_design"
        android:text="LINE CHART"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/graph2"
            android:scaleType="fitXY"
            android:layout_weight="2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/title1"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_gravity="top"
            />
        <TextView
            android:layout_marginTop="100dp"
            android:id="@+id/btnPieChart"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#fffa70"
            android:text="오늘의 통계"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btnBarChart"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ff6854"
            android:gravity="center"
            android:text="이번주 통계"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btnDiscountChart"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ff9830"
            android:gravity="center"
            android:text="이번달 할인율"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"/>


</LinearLayout>